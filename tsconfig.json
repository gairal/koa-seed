{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src", "test", "__mocks__"],
  "exclude": ["node_modules", "dist", "/*.js"]
}
